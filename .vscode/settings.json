{
    "C_Cpp.default.configurationProvider": "ms-vscode.cmake-tools",
    "cmake.allowCommentsInPresetsFile": true,
    "python.terminal.activateEnvironment": true,
	"editor.rulers": [
        100
    ],
    "doxdocgen.c.triggerSequence": "///",
    "doxdocgen.c.firstLine": "/// ",
    "doxdocgen.c.commentPrefix": "/// ",
    "doxdocgen.c.lastLine": "///",
    "todo-tree.general.tags": [
        "BUG",
        "HACK",
        "FIXME",
        "TODO",
        "XXX",
        "[ ]",
        "[x]",
        "@todo",
        "@fixme",
        "FixMe [CMake]", "FixMe: [CMake]",
        "FixMe [C++20]", "FixMe: [C++20]",
        "FixMe [C++23]", "FixMe: [C++23]",
        "FixMe [C++26]", "FixMe: [C++26]",
        "@todo [C++20]", "@todo [C++23]", "@todo [C++26]",
        "<<<<<<<"
    ],
    "todo-tree.tree.buttons.groupBySubTag": true,
    "todo-tree.general.tagGroups": {
        "TODO":  ["TODO", "FIXME", "XXX", "@todo", "@fixme"],
        "BUGS":  ["BUG", "HACK"],
        "C++2x": ["FixMe [C++20]", "FixMe: [C++20]", "@todo [C++20]", "@todo [C++23]", "@todo [C++26]"],
        "CMake": ["FixMe [CMake]", "FixMe: [CMake]"],
        "git-conflict": [ "<<<<<<<" ]
    },
    "todo-tree.general.debug": true,
    "todo-tree.regex.regexCaseSensitive": false,
	"psi-header.config": {
		"license": "Custom",
        "forceToTop": true,
        "spacesBetweenYears": false
	},
	"psi-header.templates": [
		{
			"language": "*",
			"template": [
                "Copyright (c) <<projectCreationYear>>-<<year>> <<author>> (<<authoremail>>).",
                "SPDX-License-Identifier: GPL-3.0-or-later"
			]
		}
	],
	"psi-header.variables": [
		["projectCreationYear", "2017"],
        ["author", "Olaf"],
        ["authoremail", "<ibis-hdl@users.noreply.github.com>"],
        ["spdxid", "GPL-3.0-or-later"]
	],
    "psi-header.lang-config": [
		{
			"language": "cpp",
            "lineLength": 100,
			"begin": "",
			"end": "",
			"prefix": "// "
		},
		{
			"language": "python",
            "lineLength": 100,
			"begin": "",
			"end": "",
			"prefix": "# "
		}
	],
    "psi-header.changes-tracking": {
        "autoHeader": "autoSave",
        "include": [
            "cpp",
            "python"
        ],
        "exclude": [
            "jsonc",
            "json",
            "markdown"
        ],
        "excludeGlob": [
            "**/CMakeLists.txt",
            "**/*.cmake",
            "**/settings.json",
            "*"
        ]
    },
