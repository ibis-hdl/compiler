{
	"$schema": "./node_modules/@cspell/cspell-types/cspell.schema.json",
    "version": "0.1",
    "language": "en",
	"ignorePaths": [
        ".git",
        ".gitignore",
        "*.log",
        "**/__snapshots__/**"
    ],
    "dictionaryDefinitions": [
        { "name": "dev_terms", "path": ".dictionaries/dev_terms.txt" },
        { "name": "words", "path": ".dictionaries/words.txt" },
        { "name": "vhdl", "path": ".dictionaries/vhdl.txt" },
        { "name": "markup", "path": ".dictionaries/markup.txt" }
    ],
    "dictionaries": [
        "dev_terms",
        "words",
        "vhdl"
    ],
    "languageSettings": [
        { "languageId": "markdown", "dictionaries": ["markup"] },
        { "languageId": "plaintext", "dictionaries": ["markup"] }
    ]
}
