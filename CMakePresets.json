{
    "version": 3,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 20,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "use-ninja",
            "description": "Default build tool",
            "hidden": true,
            "generator": "Ninja",
            "cacheVariables": {
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
            }
        },
        {
            "name": "default-dirs",
            "description": "Default build and install directories",
            "hidden": true,
            "binaryDir": "${sourceDir}/build/${presetName}",
            "cacheVariables": {
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/build/${presetName}/install"
            }
        },
        {
            "name": "use-stdlib-libc++",
            "description": "Enforce to compile and link with libc++",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_CXX_FLAGS": "-stdlib=libc++",
                "CMAKE_EXE_LINKER_FLAGS": "-stdlib=libc++",
                "CMAKE_SHARED_LINKER_FLAGS": "-stdlib=libc++"
            }
        },
        {
            "name": "debug-build",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "release-build",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "release-with-debug-build",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "RelWithDebInfo",
                "USE_DEBUG_OUTPUT": "OFF",
                "USE_LOG": "OFF"
            }
        },
        {
            "name": "clang-tidy",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_CXX_CLANG_TIDY": "clang-tidy"
            }
        },
        {
            "name": "clang-tidy-fix",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_CXX_CLANG_TIDY": "clang-tidy;-checks='-*,modernize-concat-nested-namespaces';-fix;-fix-errors"
            }
        },
        {
            "name": "compiler-clang",
            "description": "Clang C language family frontend for LLVM",
            "hidden": true,
            "inherits": [
                "default-dirs",
                "use-ninja"
            ],
            "cacheVariables": {
                "CMAKE_CXX_COMPILER": "clang++"
            }
        },
        {
            "name": "compiler-gcc",
            "description": "GNU Compiler Collection (GCC)",
            "hidden": true,
            "inherits": [
                "default-dirs",
                "use-ninja"
            ],
            "cacheVariables": {
                "CMAKE_CXX_COMPILER": "g++"
            }
        },
        {
            "name": "compiler-msvc",
            "description": "Microsoft Visual Studio C++ compiler",
            "hidden": true,
            "inherits": [
                "default-dirs",
                "use-ninja"
            ],
            "cacheVariables": {
                "CMAKE_CXX_COMPILER": "cl"
            }
        },
        {
            "name": "compiler-msvc-clang",
            "description": "Microsoft Visual Studio bundled Clang-Cl",
            "hidden": true,
            "inherits": [
                "default-dirs",
                "use-ninja"
            ],
            "cacheVariables": {
                "CMAKE_CXX_COMPILER": "clang-cl"
            }
        },
        {
            "name": "linux-default",
            "description": "Linux common settings",
            "hidden": true,
            "vendor": {
                "microsoft.com/VisualStudioSettings/CMake/1.0": {
                    "hostOS": [
                        "Linux"
                    ]
                },
                "microsoft.com/VisualStudioRemoteSettings/CMake/1.0": {
                }
              }
        },
        {
            "name": "linux-clang-default",
            "displayName": "Linux Clang",
            "hidden" : true,
            "description": "Linux/WSL2 LLVM Clang compiler",
            "inherits": [
                "linux-default",
                "compiler-clang"
            ]
        },
        {
            "name": "linux-clang-debug",
            "displayName": "Linux Clang: Debug",
            "description": "Linux/WSL2 LLVM Clang compiler: Debug",
            "inherits": [
                "linux-clang-default",
                "debug-build"
            ]
        },
        {
            "name": "linux-clang-release",
            "displayName": "Linux Clang: Release",
            "description": "Linux/WSL2 LLVM Clang compiler: Release",
            "inherits": [
                "linux-clang-default",
                "release-build"
            ]
        },
        {
            "name": "linux-gcc-default",
            "displayName": "Linux GCC",
            "hidden" : true,
            "description": "Linux/WSL2 GNU C compiler",
            "inherits": [
                "linux-default",
                "compiler-gcc"
            ]
        },
        {
            "name": "linux-gcc-debug",
            "displayName": "Linux GCC: Debug",
            "description": "Linux/WSL2 GNU C compiler: Debug",
            "inherits": [
                "linux-gcc-default",
                "debug-build"
            ]
        },
        {
            "name": "linux-gcc-release",
            "displayName": "Linux GCC: Release",
            "description": "Linux/WSL2 GNU C compiler: Release",
            "inherits": [
                "linux-gcc-default",
                "release-build"
            ]
        },
        {
            "name": "windows-default",
            "description": "Windows common settings",
            "hidden": true,
            "vendor": {
                "microsoft.com/VisualStudioSettings/CMake/1.0": {
                    "hostOS": [
                        "Windows"
                    ]
                }
            }
        },
        {
            "name": "windows-arch-x64",
            "description": "Windows MSVC x64 architecture with special handling of external toolset like ninja",
            "hidden": true,
            "architecture": {
                "value": "x64",
                "strategy": "external"
            },
            "toolset": {
                "value": "host=x64",
                "strategy": "external"
            }
        },
        {
            "name": "windows-msvc-default",
            "description": "Windows MSVC compiler",
            "hidden": true,
            "inherits": [
                "windows-default",
                "windows-arch-x64",
                "compiler-msvc"
            ]
        },
        {
            "name": "windows-msvc-clang-default",
            "description": "Windows MSVC Clang-Cl",
            "hidden": true,
            "inherits": [
                "windows-default",
                "windows-arch-x64",
                "compiler-msvc-clang"
            ]
        },
        {
            "name": "windows-clang-default",
            "description": "Windows Clang",
            "hidden": true,
            "inherits": [
                "windows-default",
                "windows-arch-x64",
                "compiler-clang"
            ]
        },
        {
            "name": "windows-msvc-debug",
            "displayName": "Windows MSVC: Debug",
            "description": "Microsoft Visual Studio C++ compiler: Debug",
            "inherits": [
                "windows-msvc-default",
                "debug-build"
            ]
        },
        {
            "name": "windows-msvc-release",
            "displayName": "Windows MSVC: Release",
            "description": "Microsoft Visual Studio C++ compiler: Release",
            "inherits": [
                "windows-msvc-default",
                "release-build"
            ]
        },
        {
            "name": "windows-msvc-clang-debug",
            "displayName": "Windows MSVC Clang: Debug",
            "description": "Microsoft Visual Studio Clang-Cl compiler: Debug",
            "inherits": [
                "windows-msvc-clang-default",
                "debug-build"
            ]
        },
        {
            "name": "windows-msvc-clang-release",
            "displayName": "Windows MSVC Clang: Release",
            "description": "Microsoft Visual Studio Clang-Cl compiler: Release",
            "inherits": [
                "windows-msvc-clang-default",
                "release-build"
            ]
        },
        {
            "name": "windows-clang-debug",
            "displayName": "Windows Clang: Debug",
            "description": "Windows LLVM Clang compiler: Debug",
            "inherits": [
                "windows-clang-default",
                "debug-build"
            ]
        },
        {
            "name": "windows-clang-release",
            "displayName": "Windows Clang: Release",
            "description": "Windows LLVM Clang compiler: Release",
            "inherits": [
                "windows-clang-default",
                "release-build"
            ]
        },
        {
            "name": "ci-default",
            "hidden": true,
            "cacheVariables": {
                "IBIS_BUILD_TESTS": "ON",
                "IBIS_ENABLE_PCH_DEFAULT": "OFF",
                "IBIS_ENABLE_PCH_IBIS": "OFF",
                "IBIS_ENABLE_TSAN": "OFF",
                "IBIS_ENABLE_ASAN": "OFF",
                "IBIS_ENABLE_LSAN": "OFF",
                "DEVELOPER_CLANG_WARN_EVERYTHING": "OFF",
                "DEVELOPER_RUN_IWYU": "OFF",
                "DEVELOPER_BOOST_SPIRIT_X3_DEBUG": "OFF",
                "DEVELOPER_RUN_ON_VALGRIND": "OFF",
                "DEVELOPER_RUN_CLANG_FORMAT": "OFF"
            }
        },
        {
            "name": "ci-windows",
            "description": "used by the ci pipeline",
            "inherits": [
                "ci-default",
                "windows-msvc-release"
            ]
        },
        {
            "name": "ci-linux",
            "description": "used by the ci pipeline",
            "inherits": [
                "ci-default",
                "linux-clang-release"
            ],
            "cacheVariables": {
                "CMAKE_CXX_COMPILER_LAUNCHER": "ccache"
            }
        },
        {
            "name": "linux-dev",
            "displayName": "Linux Clang Developer Mode",
            "description": "Linux/WSL2 LLVM Clang compiler Developer Mode",
            "inherits": [
                "linux-clang-default",
                "release-build",
                "clang-tidy"
            ],
            "cacheVariables": {
                "CMAKE_CXX_COMPILER_LAUNCHER": "ccache"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "linux-clang-debug",
            "displayName": "Debug",
            "configurePreset": "linux-clang-debug"
        },
        {
            "name": "linux-clang-release",
