{
    "version": 8,
    "include": [
        "cmake/presets/gnuc.json",
        "cmake/presets/clang.json",
        "cmake/presets/clang-libcpp.json",
        "cmake/presets/msvc.json",
        "cmake/presets/msvc-cl.json",
        "ConanCMakePresets.json"
    ],
    "configurePresets": [
        {
            "name": "cmake-conan-provider",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_PROJECT_TOP_LEVEL_INCLUDES": "${sourceDir}/cmake/cmake-conan/conan_provider.cmake"
            }
        },
        {
            "name": "manual-conan-install",
            "description": "Required run: python3 conan_install.py --profile <conan-profile>, depends on 'ConanCMakePresets.json'",
            "hidden": true,
            "inherits": [
                "conan-default"
            ]
        },
        {
            "name": "gcc",
            "displayName": "GnuC",
            "description": "GnuC compiler",
            "inherits": [
                "compiler-gcc",
                "condition-linux",
                "ninja-multi-config",
                "manual-conan-install",
                "cmake-default-configure-settings",
                "default-install-settings",
                "default-environment"
            ],
            "cacheVariables": {
                "CONAN_HOST_PROFILE": "gcc",
                "CONAN_BUILD_PROFILE": "gcc"
            }
        },
        {
            "name": "clang",
            "displayName": "Clang",
            "description": "Clang compiler (using GNU libstdc++)",
            "inherits": [
                "compiler-clang",
                "condition-linux-or-macos",
                "ninja-multi-config",
                "manual-conan-install",
                "cmake-default-configure-settings",
                "default-install-settings",
                "default-environment"
            ],
            "cacheVariables": {
                "CONAN_HOST_PROFILE": "clang",
                "CONAN_BUILD_PROFILE": "clang"
            }
        },
        {
            "name": "clang-libc++",
            "displayName": "Clang-libc++",
            "description": "Clang compiler (using libc++)",
            "inherits": [
                "compiler-clang-libc++",
                "condition-linux-or-macos",
                "ninja-multi-config",
                "manual-conan-install",
                "cmake-default-configure-settings",
                "default-install-settings",
                "default-environment"
            ],
            "cacheVariables": {
                "CONAN_HOST_PROFILE": "clang-libc++",
                "CONAN_BUILD_PROFILE": "clang-libc++"
            }
        },
        {
            "name": "msvc",
            "displayName": "MSVC",
            "description": "Microsoft Visual Studio C++ compiler",
            "inherits": [
                "compiler-msvc",
                "condition-windows",
                "windows-x64-arch",
                "ninja-multi-config",
                "manual-conan-install",
                "cmake-default-configure-settings",
                "default-install-settings",
                "default-environment"
            ],
            "cacheVariables": {
                "CONAN_HOST_PROFILE": "msvc",
                "CONAN_BUILD_PROFILE": "msvc"
            }
        },
        {
            "name": "msvc-cl",
            "displayName": "MSVC-Cl",
            "description": "Microsoft Visual Studio bundled ClangCL C++ compiler",
            "inherits": [
                "compiler-msvc-clang",
                "condition-windows",
                "windows-x64-arch",
                "ninja-multi-config",
                "manual-conan-install",
                "cmake-default-configure-settings",
                "default-install-settings",
                "default-environment"
            ],
            "cacheVariables": {
                "CONAN_HOST_PROFILE": "msvc-cl",
                "CONAN_BUILD_PROFILE": "msvc-cl"
            }
        }      
    ],
    "buildPresets": [
        {
            "name": "gcc-release",
            "displayName": "Release",
            "description": "Release build with GnuC",
            "configuration": "Release",
            "configurePreset": "gcc"
        },
        {
            "name": "gcc-debug",
            "displayName": "Debug",
            "description": "Debug build with GnuC",
            "configuration": "Debug",
            "configurePreset": "gcc"
        },
        {
            "name": "clang-release",
            "displayName": "Release",
            "description": "Release build with Clang",
            "configuration": "Release",
            "configurePreset": "clang"
        },
        {
            "name": "clang-debug",
            "displayName": "Debug",
            "description": "Debug build with Clang",
            "configuration": "Debug",
            "configurePreset": "clang"
        },
        {
            "name": "clang-libc++-release",
            "displayName": "Release",
            "description": "Release build with Clang libc++",
            "configuration": "Release",
            "configurePreset": "clang-libc++"
        },
        {
            "name": "clang-libc++-debug",
            "displayName": "Debug",
            "description": "Debug build with Clang libc++",
            "configuration": "Debug",
            "configurePreset": "clang-libc++"
        },       
        {
            "name": "msvc-release",
            "displayName": "Release",
            "description": "Release build with Microsoft Visual Studio",
            "configuration": "Release",
            "configurePreset": "msvc"
        },
        {
            "name": "msvc-debug",
            "displayName": "Debug",
            "description": "Debug build with Microsoft Visual Studio",
            "configuration": "Debug",
            "configurePreset": "msvc"
        },
        {
            "name": "msvc-cl-release",
            "displayName": "Release",
            "description": "Release build with Microsoft Visual Studio bundled ClangCL C++ compiler",
            "configuration": "Release",
            "configurePreset": "msvc-cl"
        },
        {
            "name": "msvc-cl-debug",
            "displayName": "Debug",
            "description": "Debug build with Microsoft Visual Studio bundled ClangCL C++ compiler",
            "configuration": "Debug",
            "configurePreset": "msvc-cl"
        }
    ]

}